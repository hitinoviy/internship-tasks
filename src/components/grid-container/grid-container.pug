mixin gridItem(title, className='')
    div(class = 'grid-item '+ className)
        h2.item-title= title
        button.item-btn
            include ../../assets/images/arrow.svg
- var topValue = ['Мостовая сталь/Стальные конструкции мостов','Железобетонные конструкции мостов','Дорожные ограждения барьерного типа']
- var middleValues = ['Шпунтовой замок','Мостовой крепеж','Профили для деформационных швов']
- var bottomValues = ['Плетеные габионы','Модульные мосты']
mixin grid-container()
    section.grid-container
        h1.grid-title
            span Комплексные
            | &nbsp;предложения для мостостроения
        .grid-top
            each value, key in topValue
                +gridItem(value)
        .grid-middle
            each value, key in middleValues
                if key === 0
                    +gridItem(value,'dark-blue')
                else if key === 2
                    +gridItem(value,'light-blue')
                else
                    +gridItem(value)
        .grid-bottom
            each value, key in bottomValues
                +gridItem(value)
